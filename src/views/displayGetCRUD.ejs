<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>display get crud</title>
        <style>
            table,
            th,
            td {
                border: 1px solid black;
                border-collapse: collapse;
            }
            button {
                background-color: rgb(128, 113, 113);
                color: black;
                cursor: pointer;
                margin: 5px 15px;
                border: 1px solid #777;
                height: 20px;
                font-size: 15px;
                border-radius: 4px;
            }
        </style>
    </head>
    <body>
        get crus from view
        <table style="width: 100%">
            <tr>
                <th>Email</th>
                <th>First</th>
                <th>Last name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>

            <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>"> <button type="button">Edit</button></a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>"> <button type="button">Delete</button></a>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>
